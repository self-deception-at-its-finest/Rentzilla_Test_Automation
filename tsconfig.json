{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
  },
  "include": [
    "playwright.config.ts",
    "components",
    "fixtures",
    "pages",
    "tests",
    "constants",
    "utils",
    "types",
    "flows",
    "config"
  ]
}
